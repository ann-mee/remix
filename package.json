{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/tailwind.css -o app/styles/app.css",
    "dev": "concurrently \"npm run:dev:css\" \"remix dev\" \"npm:json-server\"",
    "dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/styles/app.css",
    "json-server": "json-server --watch db.json --port 3001"
  },
  "dependencies": {
    "@remix-run/css-bundle": "^1.16.1",
    "@remix-run/node": "^1.16.1",
    "@remix-run/react": "^1.16.1",
    "@remix-run/vercel": "^1.16.1",
    "@remix-validated-form/with-zod": "^2.0.6",
    "@vercel/node": "^2.10.3",
    "@xata.io/client": "^0.24.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "isbot": "^3.6.8",
    "postcss": "^8.4.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-validated-form": "^5.0.2",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.16.1",
    "@remix-run/eslint-config": "^1.16.1",
    "@remix-run/serve": "^1.16.1",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "eslint": "^8.38.0",
    "json-server": "^0.17.3",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=14"
  }
}
